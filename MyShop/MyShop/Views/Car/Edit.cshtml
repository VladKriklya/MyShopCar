@model CarViewModel
@using MyShop.Extensions
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Add Car</h2>
<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <input hidden asp-for="Car.Id" />
    <input hidden asp-for="Car.ImagePath" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Car.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control"></select>
            <span asp-validation-for="Car.MakeID" class="text-danger"></span>
        </div>
        <div class="col-auto">
            <label asp-for="Car.ImagePath"></label>
        </div>
        <div class="col-4">
            <input type="file" name="files" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Models"></label>
        </div>
        <div class="col-4">
            <select asp-for="Car.ModelID" asp-items="Model.Models.ToSelectListItem()" class="form-control"></select>
            <span asp-validation-for="Car.ModelID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Year"></label>
        </div>
        <div class="col-4">
            <input asp-for="Car.Year" class="form-control" />
            <span asp-validation-for="Car.Year" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Milleage"></label>
        </div>
        <div class="col-4">
            <input asp-for="Car.Milleage" class="form-control" />
            <span asp-validation-for="Car.Milleage" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Price"></label>
        </div>
        <div class="col-4">
            <input asp-for="Car.Price" class="form-control" />
            <span asp-validation-for="Car.Price" class="text-danger"></span>
        </div>
        <div class="col-1">
            <label asp-for="Car.Currency"></label>
        </div>
        <div class="col-4">
            <select asp-for="Car.Currency" asp-items="Model.Curencies.ToSelectListItem()" class="form-control"></select>
            <span asp-validation-for="Car.Currency" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Features"></label>
        </div>
        <div class="col-4">
            <textarea asp-for="Car.Features" class="form-control">0</textarea>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.SellectName"></label>
        </div>
        <div class="col-4">
            <input asp-for="Car.SellectName" class="form-control" />
            <span asp-validation-for="Car.SellectName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.SellectEmail"></label>
        </div>
        <div class="col-4">
            <input asp-for="Car.SellectEmail" class="form-control" />
            <span asp-validation-for="Car.SellectEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.SelectPhone"></label>
        </div>
        <div class="col-4">
            <input asp-for="Car.SelectPhone" class="form-control" />
            <span asp-validation-for="Car.SelectPhone" class="text-danger"></span>
        </div>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>