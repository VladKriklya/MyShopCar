@model int


<td class="text-right">
    <div class="btn-group" role="group">
        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model"><i class="fas fa-edit"></i></a>
        <form method="post" asp-action="Delete">
            <button onclick="if(!confirm('Are you sure you want to delete this Item?')){return false}"
                    type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@Model"
                    value="Delete">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
    </div>
</td>